{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    ".expo/types/**/*.js",
    "expo-env.d.js",
    "app/index.jsx",
    "context/authContext.jsx",
    "components/Avatar.jsx",
    "components/BackButton.jsx",
    "components/Button.jsx",
    "components/NotificationItem.jsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
